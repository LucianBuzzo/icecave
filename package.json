{
  "name": "icecave",
  "version": "2.0.1",
  "description": "Fast and simple flat file storage for small projects",
  "keywords": [
    "flatfile",
    "database",
    "db",
    "lightweight",
    "storage",
    "immutable"
  ],
  "main": "lib/index.js",
  "scripts": {
    "test": "npm run cleanup && nyc --reporter=lcov ava -v",
    "lint": "standard",
    "ci": "npm run lint && npm run test",
    "cleanup": "./test/cleanup-test-files.js",
    "benchmark": "node perf/benchmark.js",
    "readme": "jsdoc2md --template doc/README.hbs lib/index.js > README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LucianBuzzo/icecave.git"
  },
  "author": "Lucian Buzzo <lucian.buzzo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^1.0.1",
    "benchmark": "^2.1.4",
    "jsdoc-to-markdown": "^4.0.1",
    "nyc": "^13.1.0",
    "standard": "^12.0.1",
    "uuid": "^3.3.2"
  },
  "ava": {
    "timeout": "5m",
    "verbose": true,
    "concurrency": 3,
    "failWithoutAssertions": true,
    "files": [
      "test/**/*.spec.js"
    ]
  },
  "dependencies": {
    "ajv": "^6.12.3",
    "deep-copy": "^1.4.2",
    "fast-memoize": "^2.5.1",
    "jsonpatch": "^3.0.1"
  }
}
